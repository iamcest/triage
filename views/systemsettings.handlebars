    <!-- Diseases manager -->
    <div class="col-md-4 col-lg-4" style="padding-right: 30px; padding-left: 30px;">
         <div class="row">
            <!-- Add new disease -->
            <h4 style="margin-top: 0px;">Agregar Enfermedades</h4>
            <form action="/app/adddisease" method="post">
                <div class="form-group row">
                    <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Nombre Enfermedad</label>
                    <div class="col-sm-7 col-md-7 col-lg-7">
                        <input class="form-control" style="width: 100%;" type="text" name="diseaseName" required="true" placeholder="Ingrese Enfermedad...">
                    </div>
                </div>

                <!-- Last name input -->
                <div class="form-group row">
                    <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Riesgo Mortalidad</label>
                    <div class="col-sm-7 col-md-7 col-lg-7">
                        <input class="form-control" style="width: 100%;" type="number" name="diseaseScore" required="true" placeholder="Ingrese Mortalidad...">
                    </div>
                </div>

            	<input class="btn btn-success" style="float: right;" type="Submit" name="Submit" value="Cargar Enfermedad...">
            </form>
        </div>

        <hr style="border-top: dotted 1px;" />

        <div class="row">
        <!-- Delete diseases -->
            <h4 style="margin-top: 0px;">Borrar Enfermedad</h4>
            <form action="/app/deletediseases" method="post">
                <table id="diseases-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <!-- JavaScript works here! -->
                </table>

                <input class="btn btn-danger" style="float: right;" type="Submit" name="Submit" value="Borrar Enfermedad">
            </form>
        </div>
    </div>


    <!-- Rooms manage -->
    <div class="col-md-4 col-lg-4" style="padding-right: 30px; padding-left: 30px;">
        <!-- Add new room -->
        <div class="row">
            <h4 style="margin-top: 0px;"Cargar Servicio"</h4>
            <form action="/app/addroom" method="post">
                <div class="form-group row">
                    <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Nombre Servicio</label>
                    <div class="col-sm-7 col-md-7 col-lg-7">
                        <input class="form-control" style="width: 100%;" type="text" name="roomName" required="true" placeholder="Ingresar Nuevo Servicio...">
                    </div>
                </div>

            	<input class="btn btn-success" style="float: right;" type="Submit" name="Submit" value="Cargar Servicio">
            </form>
        </div>

        <hr style="border-top: dotted 1px;" />

        <!-- Delete rooms -->
        <div class="row">
            <h4 style="margin-top: 0px;">Borrar Servicios</h4>
            <form action="/app/deleterooms" method="post">
                <table id="rooms-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <!-- JavaScript works here! -->
                </table>

                <input class="btn btn-danger" style="float: right;" type="Submit" name="Submit" value="Borrar Servicio">
            </form>
        </div>
    </div>


   <div class="col-md-4 col-lg-4" style="padding-right: 30px; padding-left: 30px;">
        <div class="row">
             <h4 style="margin-top:0px">Agregar Usuario</h4>
             <form method="post" action="/app/adduser" center="true">
                 <div class="form-group row">
                     <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Usuario</label>
                     <div class="col-sm-9 col-md-9 col-lg-9">
                          <input class="form-control" style="width: 100%;" type="text" name="username" required="true" placeholder="Ingrese Usuario...">
                     </div>
                 </div>
                 <div class="form-group row">
                     <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Password</label>
                     <div class="col-sm-9 col-md-9 col-lg-9">
                          <input class="form-control" style="width: 100%;" type="password" name="password" required="true" placeholder="Ingrese password...">
                     </div>
                 </div>
                 <button type="submit" style="float: right;" class="btn btn-primary">Cargar Usuario</button>
             </form>
        </div>
   </div>

</hr>

<div class="row">
            <h4 style="margin-top: 0px;">Borrar Usuario</h4>
            <form action="/app/deleteusers" method="post">
                <table id="users-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <!-- JavaScript works here! -->
                </table>

                <input class="btn btn-danger" style="float: right;" type="Submit" name="Submit" value="Borrar Usuario">
            </form>
        </div>
    </div>

